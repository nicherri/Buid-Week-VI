@model BW_VI___Team_1.Models.DTO.UsageDTO

@{
    ViewData["Title"] = "AddUsage";
}
<div class="addPage">

<h1>Aggiungi Uso</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="AddUsage">
                @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrizione</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="d-flex justify-content-around mt-3">
            <div class="form-group">
                        <input type="submit" value="Crea Uso" class="btn addButtonCreate"  />
            </div>
                    <div>
                        <a asp-action="Index" class="btn addButtonBack">Torna Indietro</a>
                    </div>
                </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
