@model BW_VI___Team_1.Models.DTO.RecoveryDTO

@{
    ViewData["Title"] = "Add Recovery";
}
<div class="addPage">
<h1>Aggiungi Ricovero</h1>

<form asp-action="AddRecovery" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="EndDate">Data di fine Ricovero</label>
            <input type="date" asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="AnimalId">Aniamle</label>
        <select asp-for="AnimalId" asp-items="ViewBag.Animals" class="form-control"></select>
        <span asp-validation-for="AnimalId" class="text-danger"></span>
    </div>

        <div class="d-flex justify-content-around mt-3">
            <button type="submit" class="btn addButtonCreate">Crea </button>
            <div>
                <a asp-action="Index" class="btn addButtonBack">Torna Indietro</a>
            </div>
        </div>
</form>
</div>