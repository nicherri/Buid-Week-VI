@model BW_VI___Team_1.Models.Recovery

@{
    ViewData["Title"] = "Update Recovery";
}
<div class="addPage">
    <h1>Modifica Ricovero</h1>

    <form asp-action="UpdateRecovery" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="StartDate" />

        <div class="form-group">
            <label asp-for="EndDate">Data di fine Ricovero</label>
            <input type="date" asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AnimalId">Animale</label>
            <select asp-for="AnimalId" asp-items="ViewBag.Animals" class="form-control"></select>
            <span asp-validation-for="AnimalId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsRefound"></label>
            <input type="checkbox" asp-for="IsRefound" />
            <span asp-validation-for="IsRefound" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-around mt-3">
            <button type="submit" class="btn addButtonCreate">Aggiorna</button>
            <div>
                <a asp-action="Index" class="btn addButtonBack">Torna Indietro</a>
            </div>
        </div>
    </form>
</div>
