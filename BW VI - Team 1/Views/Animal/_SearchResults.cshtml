@model IEnumerable<BW_VI___Team_1.Models.DTO.AnimalSearchResultDTO>
<!--cose-->
@if (Model != null && Model.Any())
{
    foreach (var animal in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3 class="card-title">Animale</h3>
                        <p class="card-text"><strong>Nome:</strong> @animal.Name</p>
                        <p class="card-text"><strong>Numero Microchip:</strong> @animal.MicrochipNumber</p>
                        <p class="card-text"><strong>In Ricovero?:</strong> @(animal.IsInRecovery ? "Sì" : "No")</p>
                    </div>
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <img src="@animal.ImageUrl" alt="Immagine dell'animale" class="img-fluid" style="max-width: 100%;" />
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        Nessun animale trovato con il numero di microchip fornito.
    </div>
}
